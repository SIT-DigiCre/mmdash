{
	"name": "mmdash",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "VITE_BUILD_TIME=$(date -u +%Y-%m-%dT%H:%M:%SZ) vite dev",
		"build": "VITE_BUILD_TIME=$(date -u +%Y-%m-%dT%H:%M:%SZ) vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"fetch:reactions": "tsx scripts/fetch-reaction-counts.ts",
		"fetch:analytics": "tsx scripts/fetch-analytics.ts",
		"fetch:all": "pnpm run fetch:reactions && pnpm run fetch:analytics"
	},
	"devDependencies": {
		"@eslint/compat": "2.0.2",
		"@eslint/js": "9.39.2",
		"@mattermost/types": "11.3.0",
		"@types/node": "25.1.0",
		"dotenv": "17.2.3",
		"eslint": "9.39.2",
		"eslint-plugin-svelte": "3.14.0",
		"globals": "17.2.0",
		"prettier": "3.8.1",
		"prettier-plugin-svelte": "3.4.1",
		"svelte-check": "4.3.5",
		"tsx": "4.21.0",
		"typescript": "5.9.3",
		"typescript-eslint": "8.54.0",
		"wrangler": "4.61.1"
	},
	"dependencies": {
		"@mattermost/client": "11.3.0",
		"@sveltejs/adapter-cloudflare-workers": "2.9.0",
		"@sveltejs/kit": "2.50.1",
		"@sveltejs/vite-plugin-svelte": "6.2.4",
		"svelte": "5.49.1",
		"vite": "7.3.1"
	}
}
